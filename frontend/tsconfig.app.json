{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "baseUrl": "./src",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@entities": ["entities"],
      "@entities/*": ["entities/*"],
      "@features": ["features"],
      "@features/*": ["features/*"],
      "@widgets": ["widgets"],
      "@widgets/*": ["widgets/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
